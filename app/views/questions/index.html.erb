<h1>List Question</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Nanme</th>
    <th>Content</th>
  </tr>
  <% @question.each do |question| %>
  <tr>
    <td><%= question.id %></td>
    <td><%= question.title %></td>
    <td><%= question.name %></td>
    <td><%= question.content %></td>
    <td><%= link_to 'show', question_path(question) %></td>
    <td><%= link_to 'edit', edit_question_path(question) %></td>
    <td><%= link_to 'destroy', question_path(question), data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>
